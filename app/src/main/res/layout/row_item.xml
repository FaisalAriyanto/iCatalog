<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle"
    android:id="@+id/card_view"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_rounded_rect">

        <ImageView
            android:id="@+id/iv_commodity_photo"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hannibal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/fav_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_commodity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="10dp"
                    android:layout_alignParentTop="true"
                    android:text="Meja Laptop Portable"/>

                <TextView
                    android:id="@+id/tv_commodity_seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="7dp"
                    android:paddingTop="5dp"
                    android:text="Oleh John Doe"/>

                <TextView
                    android:id="@+id/tv_commodity_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="7dp"
                    android:text="99% (1000 feedback)"/>

                <TextView
                    android:id="@+id/tv_commodity_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:text="Rp139rb"/>



            </LinearLayout>
            <TextView
                android:id="@+id/fav_cv_Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textColor="@color/colorSecondaryText"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_below="@+id/fav_content"/>
            <Button
                android:id="@+id/btn_favorite_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beli"
                android:layout_below="@+id/fav_cv_Options"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

